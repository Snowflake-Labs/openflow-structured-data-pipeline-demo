# =============================================================================
# MusicFlow - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.template .env

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================

# Snowflake Account Information
SNOWFLAKE_ACCOUNT=your_account_identifier.us-east-1
SNOWFLAKE_USER=your_username
SNOWFLAKE_DEFAULT_CONNECTION_NAME=devrel-ent

# Snowflake OpenFlow Demo Environment
SNOWFLAKE_OPENFLOW_DEMO_DATABASE=music_flow_demo
SNOWFLAKE_OPENFLOW_DEMO_WAREHOUSE=music_flow_wh
SNOWFLAKE_OPENFLOW_DEMO_ROLE=music_flow_role

# Service Account Configuration
SA_USER=music_flow_service
PRIVATE_KEY_PASSPHRASE=your_private_key_passphrase

# =============================================================================
# SNOWFLAKE OPENCATALOG CONFIGURATION
# =============================================================================
# OpenCatalog Account and Catalog Settings
OPENCATALOG_API_URL=https://your_account.snowflakecomputing.com/opencatalog
OPENCATALOG_CATALOG_NAME=music_flow
OPENCATALOG_CATALOG_NAMESPACE=music_flow

# OpenCatalog Service Connection Credentials
OPENCATALOG_CLIENT_ID=your_openCatalog_client_id
OPENCATALOG_CLIENT_SECRET=your_openCatalog_client_secret
OPENCATALOG_SERVICE_NAME=music-flow-service

# OpenCatalog Storage Configuration
OPENCATALOG_STORAGE_BASE_URL=s3://your-music-flow-storage-bucket
OPENCATALOG_STORAGE_AWS_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/your-music-flow-s3-role
OPENCATALOG_STORAGE_AWS_EXTERNAL_ID=your_external_id_from_openCatalog
OPENCATALOG_STORAGE_AWS_REGION=us-west-2

# Additional OpenCatalog Configuration
OPENCATALOG_ADMIN_USER_NAME=music-flow-service
OPENCATALOG_CONNECTION_NAME=music_flow_connection
OPENCATALOG_PRIVATE_KEY_PASSPHRASE=your_private_key_passphrase

# Legacy naming (for backward compatibility with existing code)
OPENCATALOG_URI=https://your_account.snowflakecomputing.com/polaris/api/catalog
OPENCATALOG_NAME=music_flow

# Legacy Polaris naming (for backward compatibility)
POLARIS_CATALOG_URI=https://your_account.snowflakecomputing.com/polaris/api/catalog
POLARIS_CATALOG_NAME=music_flow

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Account and Region
AWS_REGION=us-west-2
AWS_PROFILE=  # Leave empty to use default profile

# S3 Configuration
S3_BUCKET=your-music-flow-demo-ingest-data

# IAM Role for OpenCatalog Access
AWS_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/your-music-flow-s3-role
AWS_EXTERNAL_ID=your_external_id_from_openCatalog

# =============================================================================
# SPARK CONFIGURATION
# =============================================================================

# Spark Local Configuration
SPARK_LOCAL_HOSTNAME=localhost

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# GitHub Personal Access Token (for development)
GH_PAT=your_github_personal_access_token

# =============================================================================
# MUSIC FLOW SPECIFIC CONFIGURATION
# =============================================================================

# Table Configuration
TABLE_NAMESPACE=events
TABLE_NAME=music_events

# Database Configuration
SNOWFLAKE_MUSIC_FLOW_DATABASE=music_flow_demo
SNOWFLAKE_ROLE=KAMESH_DEMOS

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Working Directory
USER_WORKING_DIR=$PWD/music-flow
